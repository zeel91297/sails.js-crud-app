<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="/articles/list">Articles</a>
  </li>
  <li class="breadcrumb-item active">
    Add
  </li>
</ol>
<h1 class="display-4">Edit Article</h1>
<form action="/articles/update/<%= article.id %> " method="post">
  <div class="form-group">
    <label for="title">Edit Title</label>
    <input type="text" name="title" class="form-control" value="<%= article.title %>">
  </div>
  <div class="form-group">
    <label for="title">Edit Body</label>
    <textarea name="body" class="form-control" cols="30" rows="10"><%= article.body  %> </textarea>
  </div>
  <input type="submit" value="Submit" class="btn btn-primary">
</form>
